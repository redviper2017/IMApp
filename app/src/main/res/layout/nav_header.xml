<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorNavHeader"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_nav_header_img"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:src="@drawable/user_no_photo"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorMenuIcons"
        android:layout_marginBottom="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/txt_nav_header_name"
        android:layout_below="@id/img_nav_header_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Colonel Abu Taher"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txt_nav_header_phone"
        android:layout_below="@id/txt_nav_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+880 17 173 31433"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</RelativeLayout>